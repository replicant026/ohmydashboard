{
  "name": "@radenadri/ohmydashboard",
  "version": "0.6.1",
  "description": "Agent monitoring dashboard for OpenCode â€” run with bunx ohmydashboard",
  "type": "module",
  "bin": {
    "ohmydashboard": "./bin/cli.ts"
  },
  "files": [
    "bin",
    "server",
    "dist"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"tsx watch server/index.ts\"",
    "dev:frontend": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "tsc -b && vite build",
    "build:ui": "vite build",
    "verify:runtime-imports": "node scripts/verify-runtime-imports.mjs",
    "verify:pack": "node scripts/verify-pack.mjs",
    "verify:smoke": "node scripts/smoke-local-pack.mjs",
    "release:verify": "npm run verify:runtime-imports && npm run build && npm run verify:pack && npm run verify:smoke",
    "prepublishOnly": "npm run release:verify",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-table": "^8.21.3",
    "hono": "^4.11.9",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.7.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
